    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
	    "cpu",
	    "memory",
	    "custom/media-previous",
	    "custom/media-next",
	    "custom/media"
	//"hyprland/window"
    ],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": [
	    "hyprland/language",
	    "custom/hyprlock",
	    "pulseaudio",
	    "network",
	    "clock",
	    "tray"
    ],
