		    "playing": "ÔÅã"
	    },
	    "tooltip-format": "MPD (connected)",
	    "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
	    "format": "{icon}",
	    "format-icons": {
		    "activated": "ÔÅÆ",
		    "deactivated": "ÔÅ∞"
	    }
    },
    "tray": {
	// "icon-size": 21,
	"spacing": 10
    },
    "clock": {
	    "interval": 1,
	    "timezone": "Europe/Stockholm",
	    "tooltip-format": "<big>{:%Y %B %d}</big>\n<tt><small>{calendar}</small></tt>",
	    "format": "{:%H:%M:%OS}",
	    "format-alt": "{:%Y-%m-%d; %H:%M:%OS}"
    },
    "cpu": {
	    "format": "{usage:3}% Ôãõ",
	    "tooltip": true
    },
    "memory": {
